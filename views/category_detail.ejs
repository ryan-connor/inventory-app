<!DOCTYPE html>
<html>
  <head>
  
  <div class='view'>

    <ul class='sidebar'>
      <li>
        <a href='/catalog'>Home</a>
      </li>
      <li>
        <a href='/catalog/hat/list'>All Hats</a>
      </li>
      <li>
        <a href='/catalog/category/list'>All Categories</a>
      </li>
      <li>
        <a href='/catalog/hatInstance/list'>Hat Instances</a>
      </li>
      <li>
        <a href='/catalog/create/hat'>Create new Hat</a>
      </li>
      <li>
        <a href='/catalog/category/create'>Create new Category</a>
      </li>
      <li>
        <a href='/catalog/hatInstance/create'>Create new instance of a hat</a>
      </li>
    </ul>

    
  <div class='content'>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p><%= title %></p>

    <div>Info about the category:</div>
    <!-- write it in js first then just surround each line with <% %>, use <%= %> to actually display it -->

    <div> <%=category.name%></div>
    <div> <%=category.description%></div>

    <ul>
    <%category_hats.sort( function(a,b) { %>
    
    <%    if (a.name > b.name) { %>
    <%    return 1; %>
    <%    } else { %>
    <%        return -1; %>
    <%    }    %>
    <% }); %>

    <%category_hats.forEach( (item) => {%>
        <li class='singleHat'>
           <% let url = '/catalog/hat/' + item._id; %>
        <div><a href= <%= url %> ><%=item.name%></a></div>
        </li>
    <%});%>
    </ul>


  </div>

  </body>
</html>
